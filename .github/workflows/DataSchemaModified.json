{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Detailed Data Schema Example",
  "type": "object",
  "properties": {
    "User: {
      "type": "object",
      "description": "Інформація про користувача",
      "properties": {
        "name": {
          "type": "string",
          "description": "Ім'я користувача",
          "maxLength": 100
        },
        "email": {
          "type": "string",
          "description": "Електронна пошта користувача",
          "format": "email",
          "pattern": "^[\\w\\.-]+@[\\w\\.-]+\\.\\w{2,}$"
        }
      },
      "required": ["name", "email"]
    },
    "MotivationalMessage": {
      "type": "object",
      "description": "Мотиваційне повідомлення для користувача",
      "properties": {
        "content": {
          "type": "string",
          "description": "Текст мотиваційного повідомлення",
          "maxLength": 500
        },
        "receiving_date": {
          "type": "string",
          "description": "Дата отримання мотиваційного повідомлення",
          "format": "date"
        }
      },
      "required": ["content", "receiving_date"]
    },
    "PhysicalState": {
      "type": "object",
      "description": "Дані про фізичний стан користувача",
      "properties": {
        "activity": {
          "type": "string",
          "description": "Фізична активність користувача",
          "maxLength": 100
        },
        "nutrition": {
          "type": "string",
          "description": "Інформація про харчування користувача",
          "maxLength": 200
        },
        "wellbeing": {
          "type": "string",
          "description": "Загальне самопочуття користувача",
          "maxLength": 
        }
      },
      "required": ["activity", "nutrition", "wellbeing"]
    },
    "Recommendation": {
      "type": "object",
      "description": "Рекомендації для користувача",
      "properties": {
        "text": {
          "type": "string",
          "description": "Текст рекомендації",
          "maxLength": 300
        },
        "creation_date": {
          "type": "string",
          "description": "Дата створення рекомендації",
          "format": "date"
        }
      },
      "required": ["text", "creation_date"]
    },
    "Application": {
      "type": "object",
      "description": "Інформація про додаток",
      "properties": {
        "app_name": {
          "type": "string",
          "description": "Назва додатка",
          "maxLength": 20
        },
        "version": {
          "type": "string",
          "description": "Версія додатка",
          "pattern": "^\\d+\\.\\d+$"
        }
      },
      "required": ["app_name", "version"]
    }
  }
